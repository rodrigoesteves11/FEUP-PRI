{
    "add-field-type": [
        {
            "name": "text_general",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.StopFilterFactory", "ignoreCase": true, "words": "stopwords.txt" },
                    { "class": "solr.LowerCaseFilterFactory" }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.LowerCaseFilterFactory" }
                ]
            }
        },
        {
            "name": "string",
            "class": "solr.StrField",
            "sortMissingLast": true
        },
        {
            "name": "text_exact",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.KeywordTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.LowerCaseFilterFactory" }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.KeywordTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.LowerCaseFilterFactory" }
                ]
            }
        },
        {
            "name": "text_low",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.WhitespaceTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.LowerCaseFilterFactory" }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.WhitespaceTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.LowerCaseFilterFactory" }
                ]
            }
        }
    ],
    "add-field": [
        { "name": "id", "type": "string", "indexed": true, "stored": true },
        { "name": "name", "type": "text_exact", "indexed": true, "stored": true },
        { "name": "introduction", "type": "text_general", "indexed": true, "stored": true },
        { "name": "distribution_and_habitat", "type": "text_general", "indexed": true, "stored": true },
        { "name": "description", "type": "text_general", "indexed": true, "stored": true },
        { "name": "taxonomy", "type": "text_low", "indexed": true, "stored": true },
        { "name": "conservation", "type": "text_general", "indexed": true, "stored": true },
        { "name": "kingdom", "type": "string", "indexed": true, "stored": true },
        { "name": "clade", "type": "string", "indexed": true, "stored": true },
        { "name": "order", "type": "string", "indexed": true, "stored": true },
        { "name": "family", "type": "string", "indexed": true, "stored": true },
        { "name": "subfamily", "type": "string", "indexed": true, "stored": true },
        { "name": "tribe", "type": "string", "indexed": true, "stored": true },
        { "name": "genus", "type": "string", "indexed": true, "stored": true },
        { "name": "species", "type": "string", "indexed": true, "stored": true },
        { "name": "who_discovered", "type": "string", "indexed": true, "stored": true },
        { "name": "conservation_status", "type": "text_low", "indexed": true, "stored": true },
        { "name": "image_url", "type": "string", "indexed": false, "stored": true }
    ]
}

